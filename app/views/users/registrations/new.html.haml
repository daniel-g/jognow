%div(ng-controller='RegistrationsController')
  .row
    %h2 Sign up
  %form(name='form' novalidate role='form' ng-submit='create()')
    .row
      .col-lg-6.alert.alert-danger.alert-dismissable(ng-show='errors')
        %button.close{:type => "button"}(ng-click='errors = null') &times;
        %strong
          Sorry, there are some errors preventing the acount from being created:
        %ul
          %div(ng-repeat='(field, messages) in errors')
            %div(ng-repeat='message in messages')
              %li
                {{ field | humanizeConstant }} : {{ message }}
    .form-group
      %label Email
      %input(type='text'
        name='email'
        ng-model='user.email'
      )
    .form-group
      %label Password
      %input(type='password'
        name='password'
        ng-model='user.password'
      )
    .form-group
      %label Password Confirmation
      %input(type='password'
        name='password_confirmation'
        ng-model='user.password_confirmation'
      )
    .form-group
      %label
        %input(type='checkbox'
          name='remember_me'
          ng-model='user.remember_me'
        )
        Remember Me
    .form-group
      %input.btn.btn-primary(type='submit' value='Sign up')
  .row
    %a(href='#/login') Sign in
