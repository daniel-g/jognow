%div(ng-controller='RegistrationsController')
  .row
    %h2 Sign up
  .row
    %form(name='form' novalidate role='form' ng-submit='create()')
      .form-group
        %label Email
        %input(type='text'
          name='email'
          ng-model='user.email'
        )
      .form-group
        %label Password
        %input(type='password'
          name='password'
          ng-model='user.password'
        )
      .form-group
        %label Password Confirmation
        %input(type='password'
          name='password_confirmation'
          ng-model='user.password_confirmation'
        )
      .form-group
        %label
          %input(type='checkbox'
            name='remember_me'
            ng-model='user.remember_me'
          )
          Remember Me
      .form-group
        %input.btn.btn-primary(type='submit' value='Sign up')
  .row
    %a(href='#/login') Sign in
