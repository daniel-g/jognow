%div(ng-controller='SessionsController')
  .row
    %h2 Sign in
  .row
    %form(name='form' novalidate role='form' ng-submit='create()')
      .row
        .col-lg-6.alert.alert-danger.alert-dismissable(ng-show='errors')
          %button.close{:type => "button"}(ng-click='errors = null') &times;
          %strong
            Invalid email or password
      .form-group
        %label Email
        %input(type='text'
          name='email'
          ng-model='user.email'
        )
      .form-group
        %label Password
        %input(type='password'
          name='password'
          ng-model='user.password'
        )
      .form-group
        %label
          %input(type='checkbox'
            name='remember_me'
            ng-model='user.remember_me'
          )
          Remember Me
      .form-group
        %input.btn.btn-primary(type='submit' value='Sign in')
        or
        %a(href='#/register') Register
